    <select id="getUserList" resultMap="userResultMap">
        select * from user;
    </select>

    <!--    根据用户名得到用户的基本信息-->
    <select id="getUserByName" resultMap="userResultMap">
        select *
        from user
        where username = #{username}
    </select>

    <!--    根据id得到用户基本信息-->
    <select id="getUserById" resultMap="userResultMap">
        select *
        from user
        where id = #{id}
    </select>

    <!--    插入用户的信息-->
    <insert id="insertUser" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into user(username,password,vip,icon,email,location_dir)
        values (#{username},#{password},#{vip},#{icon},#{email},#{targetLocation})
    </insert>

    <!--    更新密码-->
    <update id="changePwd" >
        update user
        set password = #{newpassword}
        where username = #{username}
    </update>

    <!--更新除密码其他信息-->
    <update id="updateUser">
        update user
        <set>
            <if test="icon != null">
            icon = #{icon},
            </if>
            <if test="email != null">
                email = #{email}
            </if>
            <if test="targetLocation != null">
                location_dir = #{targetLocation}
            </if>
        </set>
        where username = #{username}
    </update>


    <!--    用户注销-->
    <delete id="deleteUser">
        delete
        from user
        where username = #{username}
    </delete>
</mapper>